<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.SpeechToText.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40h"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.SpeechToText.PopupOverlay" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lik"
           android:layout_marginLeft="@dimen/dp220w"
            android:layout_marginTop="@dimen/dp2h"/>

        <ImageButton
            android:layout_toRightOf="@id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/block"/>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp280h"
        android:layout_alignParentBottom="true"
        android:background="#EFEDED">

        <Button
            android:layout_width="@dimen/dp180w"
            android:layout_height="@dimen/dp40h"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp10h"
            android:background="@drawable/roundbutton"
            android:text="Keyboard Settings"
            android:drawableLeft="@drawable/setting"
            android:drawablePadding="@dimen/dp5w"
            android:textStyle="bold"
            android:textSize="@dimen/sp10"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

      <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp70w"
        android:layout_height="@dimen/dp70h"
          android:layout_weight="1"
          android:layout_marginTop="@dimen/dp60h"
          android:background="@drawable/button"
          android:layout_marginLeft="@dimen/dp30w">

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/translator"
              android:layout_margin="10dp"/>
      </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speak_translate"
                android:layout_marginStart="@dimen/dp25w"
                android:layout_marginLeft="@dimen/dp25w"
                android:layout_marginTop="@dimen/dp10h"
                android:textSize="@dimen/sp10"
                android:textColor="@color/black"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp70w"
                android:layout_height="@dimen/dp70h"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp60h"
                android:background="@drawable/button"
                android:layout_marginLeft="@dimen/dp30w">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/microphone" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speech to Text"
                android:layout_marginStart="@dimen/dp25w"
                android:layout_marginLeft="@dimen/dp25w"
                android:layout_marginTop="@dimen/dp10h"
                android:textSize="@dimen/sp10"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp70w"
                android:layout_height="@dimen/dp70h"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp60h"
                android:background="@drawable/button"
                android:layout_marginLeft="@dimen/dp30w">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tt"
                    android:layout_margin="10dp"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Translator"
                android:layout_marginStart="@dimen/dp40w"
                android:layout_marginLeft="@dimen/dp40w"
                android:layout_marginTop="@dimen/dp10h"
                android:textSize="@dimen/sp10"
                android:textColor="@color/black"/>

        </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="@dimen/dp5h">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp70w"
                android:layout_height="@dimen/dp70h"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_marginLeft="@dimen/dp30w">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dictionary"
                    android:layout_margin="10dp"/>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp70w"
                android:layout_height="@dimen/dp70h"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_marginLeft="@dimen/dp30w">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fav"
                    android:layout_margin="10dp"/>

            </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/dp70w"
                android:layout_height="@dimen/dp70h"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:layout_marginLeft="@dimen/dp30w">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/his"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:layout_marginStart="@dimen/dp10w"
                    android:layout_marginLeft="@dimen/dp10w"
                    android:layout_marginTop="@dimen/dp70h"
                    android:textSize="@dimen/sp10"
                    android:textColor="@color/black"/>

            </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
